<div class="card">
    <h3 class="card-header">Questions & Feedback</h3>
    <div class="card-body">
        <form>
          <div class="form-group">
            <label for="sender">Email address</label>
            <input type="email" class="form-control" id="sender" placeholder="user@example.com">
          </div>
          <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" class="form-control" id="subject" placeholder="Overnight Shipping">
          </div>
          <div class="form-group">
            <label for="body">Message</label>
            <input type="text" class="form-control" id="body" placeholder="Do you provide faster shipping options, such as overnight shipping?">
          </div>
          <br />
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>