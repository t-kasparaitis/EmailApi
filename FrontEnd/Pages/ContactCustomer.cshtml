<div class="card">
    <h3 class="card-header">Questions & Feedback</h3>
    <div class="card-body">
        <form method="post" id="email-form">
          <div class="form-group">
            <label for="sender">Recipient's email address</label>
            <input type="email" asp-for="Recipient" name="Recipient" class="form-control" id="recipient" placeholder="user@example.com">
          </div>
          <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" asp-for="Subject" name="Subject" class="form-control" id="subject" placeholder="Thank you for your purchase">
          </div>
          <div class="form-group">
            <label for="body">Message</label>
            <textarea input type="text" asp-for="Body" name="Body" rows="8" class="form-control" id="body" placeholder="We hope you enjoy your brand new ... Kind Regards, the ... Team"></textarea>
          </div>
          <br />
          <button button type="submit" id="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>