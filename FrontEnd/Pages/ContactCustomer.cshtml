@page
@model ContactCustomerModel
@{
    ViewData["Title"] = "Contact Customer";
}

<div class="text-center">
    <h1 class="display-4">Contact Customer</h1>
</div>

<div class="text-center">
<p> This form is intended for quickly sending tailored emails to customers from a shared company inbox. </p>
</div>
